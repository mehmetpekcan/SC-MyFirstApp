<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

  <Button
      android:id="@+id/customAdapterButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:onClick="changeRoute"
      android:text="Custom Adapter"
      app:layout_constraintTop_toBottomOf="@+id/arrayAdapterButton"
      tools:layout_editor_absoluteX="16dp" />

  <Button
      android:id="@+id/arrayAdapterButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="changeRoute"
      android:text="Array Adapter"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>